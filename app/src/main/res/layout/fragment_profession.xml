        <Button
            android:id="@+id/fragemnt_profession_continuebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:backgroundTint="#4c266a"
            android:text="continue"
            android:fontFamily="@font/abeezee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragemnt_profession_lifestyle" />

        <ImageButton
            android:id="@+id/fragemnt_profession_backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="65dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:fontFamily="@font/abeezee"
            android:src="@drawable/ic_arrow_back_"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_proffesions_background" />

        <ProgressBar
            android:id="@+id/profession_progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="158dp"
            android:layout_height="128dp"
            android:layout_marginTop="220dp"
            android:backgroundTint="#8450A0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.216" />

